{
  "name": "@krema/angular-eslint-stylelint-builder",
  "private": true,
  "description": "Angular CLI builder for ESLint and stylelint",
  "author": "AndrÃ© Kremser",
  "license": "MIT",
  "workspaces": [
    "./lib/*"
  ],
  "watch": {
    "build": {
      "patterns": [
        "lib"
      ],
      "extensions": "ts"
    }
  },
  "scripts": {
    "build": "npm run clean && tsc -p tsconfig.json && npm run copy:root && npm run copy:schema",
    "test": "npm run build && jest --silent",
    "copy:schema": "cp lib/builder/src/schema.json out/dist",
    "copy:root": "cp lib/builder/package.json lib/builder/builders.json LICENSE README.md out",
    "lint:check": "eslint ./lib/",
    "lint:fix": "eslint ./lib/ --fix",
    "format:check": "prettier --check ./lib/",
    "format:fix": "prettier --write ./lib/",
    "clean": "rm -rf out",
    "watch": "npm-watch"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": "^6.11.0 || ^7.5.6",
    "yarn": ">= 1.13.0"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.1303.3",
    "@angular-devkit/core": "^13.3.3",
    "@types/jest": "^27.4.1",
    "@types/node": "^16.11.31",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jasmine": "^4.1.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unused-imports": "^1.1.5",
    "jest": "^27.0.0",
    "npm-watch": "^0.11.0",
    "prettier": "^2.6.2",
    "stylelint": "^14.8.1",
    "ts-jest": "^27.1.4",
    "typescript": "^4.3.5"
  }
}
