{
  "name": "@krema/angular-eslint-stylelint-builder",
  "private": true,
  "description": "Angular CLI builder for ESLint and stylelint",
  "author": "AndrÃ© Kremser",
  "license": "MIT",
  "workspaces": [
    "./lib"
  ],
  "watch": {
    "build": {
      "patterns": [
        "lib"
      ],
      "extensions": "ts"
    }
  },
  "scripts": {
    "build": "npm run clean && tsc -p tsconfig.json && npm run copy:root && npm run copy:schema",
    "test": "npm run build && jest --ci --no-colors --reporters=default --reporters=jest-junit --reporters=jest-github-actions-reporter --watchAll=false",
    "copy:schema": "cp lib/builder/src/schema.json out/dist",
    "copy:root": "cp lib/builder/package.json lib/builder/builders.json LICENSE README.md out",
    "lint": "eslint ./lib/",
    "lint:fix": "eslint ./lib/ --fix",
    "format:check": "prettier --check ./lib/",
    "format:fix": "prettier --write ./lib/",
    "clean": "rm -rf out",
    "watch": "npm-watch"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": "^6.11.0 || ^7.5.6",
    "yarn": ">= 1.13.0"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.1303.4",
    "@angular-devkit/core": "^13.3.4",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.30",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^27.5.1",
    "jest-extended": "^2.0.0",
    "jest-github-actions-reporter": "^1.0.3",
    "jest-junit": "^13.2.0",
    "npm-watch": "^0.11.0",
    "prettier": "^2.6.2",
    "semantic-release": "^19.0.2",
    "stylelint": "^14.8.1",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.4"
  }
}
